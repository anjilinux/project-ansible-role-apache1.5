	<VirtualHost *:80>
	  ServerName {{ item.ServerName }}
	  DocumentRoot {{ item.DocumentRoot }}
	  Redirect permanent / https://{{ item.ServerName }}/
	</VirtualHost>

	<VirtualHost *:443>
	  ServerName {{ item.ServerName }}
	  DocumentRoot {{ item.DocumentRoot }}
	  SSLCertificateFile {{ item.SSLCertificateFile }}
	  SSLCertificateKeyFile {{ item.SSLCertificateKeyFile }}
	</VirtualHost>
